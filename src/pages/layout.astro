---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - INAC</title>
	</head>
	<body class="grid min-h-screen grid-rows-[60px,1fr,60px] gap-4">
		<header class="m-auto w-full max-w-screen-lg p-4">
			<h2 class="text-2xl font-medium">INAC</h2>
		</header>
		<main class="m-auto flex h-full w-full max-w-screen-lg flex-col items-center justify-between px-4">			
			<slot/>
		</main>
		<footer class="m-auto w-full max-w-screen-lg p-4 text-center">
			Inac @ Adesdev
		</footer>	
	</body>
</html>
